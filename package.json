{
  "name": "bitpay-rates",
  "version": "1.0.2",
  "description": "A tiny NodeJS wrapper for Bitpay Rates API",
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "bitcoin",
    "bitpay",
    "rates",
    "countries",
    "price"
  ],
  "author": "Mario Colque <colquemario@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/colcodev/bitpay-rates.git"
  },
  "bugs": {
    "url": "https://github.com/colcodev/bitpay-rates/issues"
  },
  "homepage": "https://github.com/colcodev/bitpay-rates#readme",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "jest": "^25.3.0",
    "nock": "^12.0.3",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "tslint": "^6.1.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
